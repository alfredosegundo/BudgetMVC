<div class="row">
    <div class="twelve columns">
        <h2>
            BudgetMVC</h2>
        <p>
            Good finacial management makes dreams come true.</p>
        <hr />
    </div>
</div>
<div class="row">
    <div class="twelve columns">
        <div class="row">
            <h3>
                Monthly Budget -
                <!--ko text: currentMonthName -->
                <!--/ko-->
                <!--ko text: currentYear -->
                <!--/ko-->
            </h3>
        </div>
        <div class="row">
            <div class="six columns">
                <div class="row">
                    <div class="ten columns">
                        <h4>
                            Revenue</h4>
                    </div>
                    <div class="two columns">
                        <span><a href="#" class="right" data-bind="click: newExpense">New</a></span>
                    </div>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>
                                Description
                            </th>
                            <th>
                                Value
                            </th>
                            <th>
                                Creation Date
                            </th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: revenues">
                        <tr>
                            <td data-bind="text: Description">
                            </td>
                            <td data-bind="text: Value">
                            </td>
                            <td data-bind="text: CreationDate">
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="six columns">
                <h4>
                    Expenses</h4>
                <table>
                    <thead>
                        <tr>
                            <th>
                                Description
                            </th>
                            <th>
                                Value
                            </th>
                            <th>
                                Creation Date
                            </th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: expenses">
                        <tr>
                            <td data-bind="text: Description">
                            </td>
                            <td data-bind="text: Value">
                            </td>
                            <td data-bind="text: CreationDate">
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div id="newRevenues" title="Create new Revenue">
    <p class="validateTips">
        All form fields are required.</p>
    <form>
    <fieldset>
        <label for="Description">
            Description</label>
        <input type="text" name="Description" id="Description" class="text ui-widget-content ui-corner-all" />
        <label for="Value">
            Value</label>
        <input type="text" name="Value" id="Value" value="" class="text ui-widget-content ui-corner-all" />
    </fieldset>
    </form>
</div>
@section Scripts {
    @Scripts.Render("~/Scripts/util/date.helper.js")
    @Scripts.Render("~/Scripts/keymaster.min.js")
    @Scripts.Render("~/Scripts/ViewModel/IndexViewModel.js")
}
