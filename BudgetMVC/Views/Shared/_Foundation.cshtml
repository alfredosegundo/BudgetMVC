<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/foundation/css")
    @RenderSection("head", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="top-bar">
        <ul>
            <li class="name">
                <h1>
                    <a href="#">BudgetMVC</a></h1>
            </li>
            <li class="toggle-topbar"><a href="#"></a></li>
        </ul>
        <section>
            <ul class="left">
                <li class="has-dropdown"><a href="#">Revenue</a>
                    <ul class="dropdown">
                        <li><a href="#" data-bind="click: newRevenue">New</a></li>
                    </ul>
                </li>
                <li class="has-dropdown"><a href="#">Expense</a>
                    <ul class="dropdown">
                        <li><a href="#" data-bind="click: newExpense">New</a></li>
                    </ul>
                </li>
            </ul>
            <ul class="right">
                <li><a href="#">Configuration</a></li>
            </ul>
        </section>
    </nav>
    @RenderBody()
    <div id="loading" class="loading ui-widget-overlay">
    </div>
    @Scripts.Render("~/bundles/spin")
    @Scripts.Render("~/bundles/foundation")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/ko")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
